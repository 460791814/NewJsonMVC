@{
    ViewBag.Title = "HTML转义工具-前端开发转换工具 ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section header{
    <meta name="keywords"
          content="web前端开发, 前端开发工程师, 前端资源, CSS, JavaScript, Ajax, jQuery, html,html5,浏览器兼容, 前端开发工具,HTML代码转换为JavaScript字符串, CSS整形和优化工具 , JS压缩工具 , JS格式化工具 ">
    <meta name="description" content="web前端开发，前端开发，关注用户体验，关注国内外最新最好的前端开发技术和前端开发">
    <!--[if IE]><link rel="stylesheet" href="/Css/ie.css" type="text/css" media="screen, projection"><![endif]-->
    <link rel="stylesheet" href="/Css/screen.css" type="text/css" media="screen, projection">
    <link href="/Css/jquery-linedtextarea.css" type="text/css" rel="stylesheet">
}
<div class="panel panel-default">
    <div class="panel-heading">
        HTML转义工具
    </div>
    <div class="panel-body">
 

        <textarea id="content" rows="10" class="json_input" style="width: 100%;height: 200px;">
            &lt;p&gt;请在输入框内贴入你需要转换的HTML代码&lt;/p&gt;
            &lt;p&gt;HTML转换工具，可以将HTML代码转换为HTML转义字符串&lt;/p&gt;
            &lt;p&gt;直接将你所要用程序输出的大串HTML代码贴到输入框中，即可一键生成&lt;/p&gt;
            &lt;p&gt;如果您觉得好用，别忘了推荐给朋友！&lt;/p&gt;
        </textarea>
        <div class="subbtn">
            <input type="button" id="btn1" value="HTML转义" class="btn btn-primary">
            <input type="button" id="btn2" value="HTML反转义" class="btn btn-primary">
        </div>
        <div style="padding-top: 10px;">
            <textarea rows="10" class="json_input" style="width: 100%;height: 200px;" id="result" placeholder="转换结果"></textarea>
        </div>
    </div>
</div>
@section scripts{
    <script src="/Js/jquery-linedtextarea.js" type="text/javascript"></script>
    <script src="~/Js/ui/htmlescape/underscore-min.js"></script>
    <script type="text/javascript">
        var $content = $("#content");
        var $result = $("#result");
        $("#btn1").on("click", function (e) {
            e.preventDefault();
            $result.val(_.escape($content.val()));
        });
        $("#btn2").on("click", function (e) {
            e.preventDefault();
            $result.val(_.unescape($content.val()));
        });
    </script>}




